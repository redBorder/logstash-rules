# Rules from: https://github.com/hpcugent/logstash-patterns/blob/master/files/ssh
# oldstyle
SSH_STATUS (?:Accepted|Failed)
SSH_INVALID_USER Invalid user

SSH_MESSAGE_CONNECTION %{SSH_STATUS:status}
SSH_MESSAGE_INVALID %{SSH_INVALID_USER:status} %{WORD:username} from %{IPORHOST:host}

#newstyle
SSH_SUBSYSTEM .*?subsystem request for (?<subsystem>.*)
SSH_DISCONNECT .*?Received disconnect from %{IPORHOST:ip}: %{NONNEGINT}: (?<reason>disconnected by user)$
SSH_DISCONNECT_2 Disconnected from %{IPORHOST:host}
SSH_VALID_INVALID .*?(?<status>Accepted|Failed|Invalid user)(?: %{WORD:method} for)? %{WORD:username} from %{IPORHOST:ip}(?: port %{NONNEGINT:port})?
SSH_INPUT_USERAUTH .*?input_userauth_request: (?<inputuserauth>invalid user %{WORD:username})
SSH_AUTH_REFUSED .*?Authentication refused: bad ownership or modes for file %{PATH:ownerpath}

SSH_PAM_SESSION .*?pam_unix\(sshd:session\): session %{WORD:sshsession} for user %{WORD:username}
SSH_MSG (?:%{SSH_VALID_INVALID}|%{SSH_PAM_SESSION}|%{SSH_DISCONNECT}|%{SSH_SUBSYSTEM}|%{SSH_INPUT_USERAUTH}|%{SSH_AUTH_REFUSED}|%{SSH_DISCONNECT_2})

